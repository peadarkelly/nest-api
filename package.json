{
  "name": "nestjs-api-poc",
  "private": true,
  "version": "1.0.0",
  "description": "Nest JS API POC",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "migrations": "knex migrate:latest --cwd ./dist",
    "start": "npm run migrations && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "npm run migrations && tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "npm run migrations && tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "npm run migrations && node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "npm run lint && nyc npm run test:unit",
    "test:unit": "mocha -r ts-node/register -r tsconfig-paths/register 'test/unit/**/*.ts' --exit",
    "test:integration": "mocha -r ts-node/register -r tsconfig-paths/register 'test/integration/**/*.ts' --exit"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/platform-express": "^6.0.4",
    "@nestjs/swagger": "^3.1.0",
    "class-validator": "^0.9.1",
    "helmet": "^3.20.0",
    "http-status-codes": "^1.3.2",
    "knex": "^0.19.1",
    "lodash": "^4.17.15",
    "pg": "^7.12.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/chai": "^4.1.7",
    "@types/express": "4.16.1",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.136",
    "@types/mocha": "^5.2.7",
    "@types/node": "11.13.4",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2",
    "ts-mockito": "^2.4.2",
    "ts-node": "^8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  }
}
