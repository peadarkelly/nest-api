{
  "name": "nestjs-api-poc",
  "private": true,
  "version": "1.0.0",
  "description": "Nest JS API POC",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "eslint -c .eslintrc.js src/**/** test/**/**",
    "test": "npm run lint && nyc npm run test:unit",
    "test:unit": "mocha -r ts-node/register -r tsconfig-paths/register 'test/unit/**/*.ts' --exit",
    "test:integration": "mocha -r ts-node/register -r tsconfig-paths/register 'test/integration/**/*.ts' --exit"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/swagger": "^4.6.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "helmet": "^4.2.0",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.20",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.1",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.164",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.16.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "supertest": "^6.0.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  }
}
